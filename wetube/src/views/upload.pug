extends base.pug

block content 
    div 
        video#preview
        button#startRecordButton Start Recording
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file" accept="video/*", required, id="video" name="video")
        input(placeholder="Enter Title of Video", type="text", name="title", required, minlength=2, maxlength=20)
        input(placeholder="Enter Description", type="text", name="description", required, maxlength=140)
        input(placeholder="Hashtags, separated by comma.", type="text", name="hashtags", required)
        input(type="submit", value="Upload Video")

block scripts 
    script(src="/static/js/recorder.js")