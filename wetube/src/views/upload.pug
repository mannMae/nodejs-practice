extends base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="Enter Title of Video", type="text", name="title", required, minlength=2, maxlength=20)
        input(placeholder="Enter Description", type="text", name="description", required, maxlength=140)
        input(placeholder="Hashtags, separated by comma.", type="text", name="hashtags", required)
        input(type="submit", value="Upload Video")